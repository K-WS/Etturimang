package mainPackage;


public class Player {
	
	private int pawnsLeft;
		public int getPawnsLeft() 
		{ 
			return pawnsLeft; 
		}
		public void pawnKilled() 
		{
			pawnsLeft--;
		}
	
	private int points;
		public int getPoints() 
		{ 
			return points; 
		}
		public void wonTheMatch()
		{
			points++;
		}
	
	public String color;
	
	public Player(String col) 
	{
		pawnsLeft = 8;
		points = 0;
		color = col;
	}
}
