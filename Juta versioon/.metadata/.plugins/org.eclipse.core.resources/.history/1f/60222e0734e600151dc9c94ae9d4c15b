package mainPackage;


public class Player {
	
	private int pawnsLeft;
		public int getPawnsLeft() 
		{ 
			return pawnsLeft; 
		}
	
	private int points;
		public int getPoints() 
		{ 
			return points; 
		}
	
	public String color;
	
	public Player(String col) 
	{
		pawnsLeft = 8;
		points = 0;
		color = col;
	}
	
	public void pawnKilled() 
	{
		pawnsLeft--;
	}
	
	public void wonTheMatch()
	{
		points++;
	}	
}
