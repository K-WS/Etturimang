package mainPackage;

public class Referee {

	Object gameBoard;
	Object whitePlayer;
	Object blackPlayer;
	byte gameNr;
	byte turn;
	
	public Referee(Object board, Object white, Object black ){
		gameBoard = board;
		whitePlayer = white;
		blackPlayer = black;
		
	}
	
	private static boolean isCorrectFormat(String input){
		if (input.length() != 4) return false; 
		else if (!input.matches("[a-hA-H][1-8][a-hA-H][1-8]")) return false;
		else if (input.charAt(0) == input.charAt(2) && input.charAt(1) == input.charAt(3)) return false;
		return true;
	}
	
	private static boolean isMyPawn(String input)
	{
		
		return true;
	}
	
	public boolean AssessMaster(String input) 
	{
		
		if (!isCorrectFormat(input)) return false;
		else if (!isMyPawn(input)) return false;
		else return true;
	}
}
