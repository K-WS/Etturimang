package mainPackage;
import java.util.Random;

public class Referee {

	Malelaud_2 gameBoard;
	Object whitePlayer;
	Object blackPlayer;
	byte gameNr;
	byte turn;
	
	public Referee(Malelaud_2 board, Object white, Object black ){
		gameBoard = board;
		whitePlayer = white;
		blackPlayer = black;
		gameNr = 0;
		turn = (byte)new Random().nextInt(1);
	}
	
	private String chstr(String str, int i){
		return Character.toString(str.charAt(i));
	}
	
	private int chint(String str, int i){
		return Integer.parseInt(Character.toString(str.charAt(i)));
	}
	
	private boolean isCorrectFormat(String input){
		if (input.length() != 4) return false; 
		else if (!input.matches("[a-hA-H][1-8][a-hA-H][1-8]")) return false;
		else if (input.charAt(0) == input.charAt(2) && input.charAt(1) == input.charAt(3)) return false;
		return true;
	}
	
	private boolean isMyPawn(String input)
	{
		String color = null; 
		
		switch (turn)
		{
			case 0: color = "m"; break;
			case 1: color = "v"; break;
		}
		if (gameBoard.laud
				.get(chstr(input, 0))
				.get(chint(input, 1))
			!= color) return false;
		return true;
	}
	
	private boolean isLegalMove(String input){
		
				
		return true;
	}
	
	private boolean containsPawn(String kv){
		
		if (gameBoard.laud.get(Character.toString))
		return true;
	}
	
	public boolean AssessMaster(String input) 
	{
		
		if (!isCorrectFormat(input)) return false;
		else if (!isMyPawn(input)) return false;
		else return true;
	}
}
